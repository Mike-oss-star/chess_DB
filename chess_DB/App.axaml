<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="chess_DB.App"
             RequestedThemeVariant="Default">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.Styles>
        <FluentTheme />
    </Application.Styles>
             
    <Application.Resources>
        <LinearGradientBrush x:Key="PrimaryBackgroundGradient" StartPoint="0%, 0%" EndPoint="100%, 100%" >
            <GradientStop Offset="0" Color="#111214"></GradientStop>
            <GradientStop Offset="1" Color="#151E3E"></GradientStop>
        </LinearGradientBrush>
        
        <LinearGradientBrush x:Key="PrimaryButtonBackgroundGradient" StartPoint="100%, 0%" EndPoint="0%, 100%" >
            <GradientStop Offset="0" Color="#111214"></GradientStop>
            <GradientStop Offset="1" Color="#151E3E"></GradientStop>
        </LinearGradientBrush>
        
        <LinearGradientBrush x:Key="PrimaryHoverBackgroundGradient" StartPoint="100%, 0%" EndPoint="0%, 100%" >
            <GradientStop Offset="0" Color="#6633DD"></GradientStop>
            <GradientStop Offset="1" Color="#9400D3"></GradientStop>
        </LinearGradientBrush>
        
        <LinearGradientBrush x:Key="PrimaryBackgroundGradientConfirm" StartPoint="0%, 0%" EndPoint="100%, 100%" >
            <GradientStop Offset="0" Color="Green"></GradientStop>
            <GradientStop Offset="1" Color="DarkGreen"></GradientStop>
        </LinearGradientBrush>
        
        <LinearGradientBrush x:Key="PrimaryBackgroundGradientCancel" StartPoint="0%, 0%" EndPoint="100%, 100%" >
            <GradientStop Offset="0" Color="Red"></GradientStop>
            <GradientStop Offset="1" Color="DarkRed"></GradientStop>
        </LinearGradientBrush>
        
        <SolidColorBrush x:Key="PrimaryBackground">#151E3E</SolidColorBrush>
        <SolidColorBrush x:Key="PrimaryForeground">#CFCFCF</SolidColorBrush>
        
        <!-- parameter when the mouse is on the button : Foreground the way we write things on button -->
        <SolidColorBrush x:Key="PrimaryHoverBackground">#6633DD</SolidColorBrush>
        <SolidColorBrush x:Key="PrimaryHoverForeground">White</SolidColorBrush>
        
        <FontFamily x:Key="AkkoPro">/Assets/Fonts/AkkoPro-Regular.ttf#Akko Pro</FontFamily>
        <FontFamily x:Key="Phosphor">/Assets/Fonts/Phosphor.ttf#Phosphor</FontFamily>
        <FontFamily x:Key="PhosphorFill">/Assets/Fonts/Phosphor-Fill.ttf#Phosphor-Fill</FontFamily>
    </Application.Resources>
</Application>