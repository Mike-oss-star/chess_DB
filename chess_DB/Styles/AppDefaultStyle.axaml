<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Design.PreviewWith>
        <Border Padding="20" Background="{DynamicResource PrimaryBackgroundGradient}" Width="400">
            <Button>
                <TextBlock> Bonjour</TextBlock>
            </Button>
            <!-- Add Controls for Previewer Here -->
        </Border>
    </Design.PreviewWith>

    <!-- Add Styles Here -->
    
    <Style Selector="Window">
        <!-- writing style -->
        <Setter Property="FontFamily" Value="{DynamicResource AkkoPro}"></Setter>
    </Style>
    
    <!-- parameters of buttons on the home page !-->
    <Style Selector="Button.home, Button.player">
        <Setter Property="Width" Value="200" ></Setter>
        <Setter Property="Height" Value="500" ></Setter>
        <Setter Property="Foreground" Value="{DynamicResource PrimaryForeground}"></Setter>
        <Setter Property="Background" Value="{DynamicResource PrimaryBackground}"></Setter>
        <Setter Property="HorizontalContentAlignment" Value="Center"></Setter>
        <Setter Property="VerticalContentAlignment" Value="Center"></Setter>
        <Setter Property="RenderTransform" Value="scale(1)"></Setter>
        <Setter Property="Transitions">
            <Transitions>
                <BrushTransition Property="Background" Duration="0:0:0.15"></BrushTransition>
                <BrushTransition Property="Foreground" Duration="0:0:0.15"></BrushTransition>
                <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.15"></TransformOperationsTransition>
            </Transitions>
        </Setter>
    </Style>
    
    <!-- parameter when the mouse is on the button : Foreground the way we write things on button -->
    <Style Selector="Button.home:pointerover /template/ ContentPresenter">
        <Setter Property="Foreground" Value="{DynamicResource PrimaryHoverForeground}"></Setter>
        <Setter Property="Background" Value="{DynamicResource PrimaryHoverBackgroundGradient}"></Setter>
    </Style>
    
    <Style Selector="Button.home:pointerover, Button.transparent:pointerover">
        <Setter Property="RenderTransform" Value="scale(1.15)"></Setter>
    </Style>
    
    <Style Selector="Label.icon">
        <Setter Property="HorizontalContentAlignment" Value="Center"></Setter>
        <Setter Property="FontFamily" Value="{DynamicResource PhosphorFill}"></Setter>
        <Setter Property="FontSize" Value="96"></Setter>
        <Setter Property="Foreground" Value="{DynamicResource PrimaryButtonBackgroundGradient}"></Setter>
    </Style>
    
    <Style Selector="TextBlock">
        <Setter Property="TextAlignment" Value="Center"></Setter>
    </Style>
    
    
    <Style Selector="TextBlock.homeText">
        <Setter Property="FontWeight" Value="Bold"></Setter>
        <Setter Property="FontSize" Value="18"></Setter>
        <Setter Property="FontStyle" Value="Italic"></Setter>
    </Style>
    
    <Style Selector="TextBlock.subText">
        <Setter Property="FontStyle" Value="Italic"></Setter>
    </Style>
    
    <Style Selector="Button.transparent">
        <Setter Property="Background" Value="Transparent"></Setter>
        <Setter Property="Foreground" Value="{DynamicResource PrimaryForeground}"></Setter>
        <Setter Property="FontFamily" Value="{DynamicResource Phosphor}"></Setter>
        <Setter Property="FontSize" Value="20"></Setter>
    </Style>
    <Style Selector="Button.transparent:pointerover /template/ ContentPresenter">
        <Setter Property="Background" Value="Transparent"></Setter>
        <Setter Property="Foreground" Value="White"></Setter>
    </Style>
    
    <Style Selector="TextBlock.title1">
        <Setter Property="FontSize" Value="25"></Setter>
        <Setter Property="Margin" Value="0"></Setter>
        <Setter Property="FontWeight" Value="ExtraBold"></Setter>
    </Style>
    
    <Style Selector="Border.textZone">
        <Setter Property="BorderBrush" Value="#808080"></Setter>
        <Setter Property="BorderThickness" Value="0.5"></Setter>
        <Setter Property="CornerRadius" Value="8"></Setter>
        <Setter Property="Padding" Value="10"></Setter>
        <Setter Property="Margin" Value="50 20 20 20"></Setter>
        <Setter Property="Width" Value="900"></Setter>
    </Style>
    
    <Style Selector="TextBlock.title2">
        <Setter Property="FontSize" Value="20"></Setter>
        <Setter Property="TextAlignment" Value="Left"></Setter>
        <Setter Property="Margin" Value="5 5 5 30"></Setter>
    </Style>
    
    <Style Selector="StackPanel.detailList">
        <Setter Property="Margin" Value="5 5 5 25"></Setter>
    </Style>
    
    <Style Selector="Border.detailList">
        <Setter Property="Margin" Value="5 5 5 25"></Setter>
        <Setter Property="Padding" Value="0 5 0 5"></Setter>
        <Setter Property="BorderBrush" Value="#808080"></Setter>
        <Setter Property="BorderThickness" Value="0 0 0 0.5"></Setter>
        
    </Style>
    
    <Style Selector="TextBlock.detailName">
        <Setter Property="Width" Value="200"></Setter>
        <Setter Property="TextAlignment" Value="Left"></Setter>
        <Setter Property="FontWeight" Value="Light"></Setter>
    </Style>
    
    <Style Selector="TextBox.detailValue">
        <Setter Property="Width" Value="600"></Setter>
    </Style>
    
    <Style Selector="Button.confirm">
        <Setter Property="Background" Value="{DynamicResource PrimaryBackgroundGradientConfirm}"></Setter>
        <Setter Property="Opacity" Value="0.7"></Setter>
        <Setter Property="CornerRadius" Value="12"></Setter>
    </Style>
    
    <Style Selector="Button.cancel">
        <Setter Property="Background" Value="{DynamicResource PrimaryBackgroundGradientCancel}"></Setter>
        <Setter Property="Opacity" Value="0.7"></Setter>
        <Setter Property="CornerRadius" Value="12"></Setter>
    </Style>
    
    <Style Selector="Label.icon_only">
        <Setter Property="FontFamily" Value="{DynamicResource Phosphor}"></Setter>
    </Style>
    
    
</Styles>
