<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="chess_DB.Views.AddGamePageView"
             xmlns:vm="clr-namespace:chess_DB.ViewModels"
             x:DataType="vm:AddGamePageViewModel">
    
    <UserControl.Styles>
        <StyleInclude Source="/Styles/AppDefaultStyle.axaml"></StyleInclude>
    </UserControl.Styles>
    
    <Grid RowDefinitions="Auto,*" Background="{DynamicResource PrimaryBackgroundGradient }">
        
        <Border Grid.Row="0" Padding="1">
            <Grid ColumnDefinitions="Auto,*">
                <StackPanel Grid.Column="0" Orientation="Horizontal" >
                    <Button  Classes="transparent" Height="50" Width="50" Command="{Binding GoToHomePageCommand}">
                        <Label Classes="icon-only" Content="&#xE2C2;"></Label>
                    </Button>
                    <Button  Classes="transparent" Height="50" Width="50" Command="{Binding GoToGamePageCommand}">
                        <Label Classes="icon-only" Content="&#xE120;"></Label>
                    </Button>
                </StackPanel>
                <TextBlock Grid.Column="1" TextAlignment="Center" Classes="title1">
                    Encode Game
                </TextBlock>
            </Grid>
        </Border>
        <Grid Grid.Row="1">

    <StackPanel Margin="25" Spacing="12">

        <TextBlock Text="Encoder une partie" FontSize="26"/>
        
        <!-- Compétition -->
        <ComboBox ItemsSource="{Binding Competitions}"
                  SelectedItem="{Binding SelectedCompetition}"
                  PlaceholderText="Compétition">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Name}" />
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>


        <!-- Joueur blanc -->
        <ComboBox ItemsSource="{Binding PlayersInCompetition}"
                  SelectedItem="{Binding WhitePlayer}"
                  PlaceholderText="Joueur Blanc">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Name}" />
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>

        <!-- Joueur noir -->
        <ComboBox ItemsSource="{Binding PlayersInCompetition}"
                  SelectedItem="{Binding BlackPlayer}"
                  PlaceholderText="Joueur Noir">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Name}" />
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>

        <!-- Résultat -->
        <ComboBox
            ItemsSource="{Binding Results}"
            SelectedItem="{Binding Result, Mode=TwoWay}" />

        <!-- Cadence -->
        <TextBox Watermark="Cadence"
                 Text="{Binding Cadence}" />
        
        <!-- moves!-->
        <TextBlock Text="Coups joués"/>
        <TextBox Text="{Binding Moves}"
                 AcceptsReturn="True"
                 Height="120"
                 Watermark="1. e4 e5 2. Nf3 Nc6..." />

        
        
        <Button Content="Enregistrer la partie"
                Command="{Binding SaveCommand}" />
    </StackPanel>
            </Grid>
        </Grid>
</UserControl>