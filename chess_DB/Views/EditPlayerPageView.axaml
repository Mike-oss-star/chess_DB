<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="chess_DB.Views.EditPlayerPageView"
             xmlns:vm="clr-namespace:chess_DB.ViewModels"
             x:DataType="vm:EditPlayerPageViewModel">

    <StackPanel Margin="20">

        <TextBox Watermark="Nom" Text="{Binding Name}" />
        <TextBox Watermark="Prénom" Text="{Binding Surname}" />
        <TextBox Watermark="Genre" Text="{Binding Gender}" />
        <DatePicker SelectedDate="{Binding Birthdate}" />
        <TextBox Watermark="Email" Text="{Binding Email}" />
        <TextBox Watermark="Téléphone" Text="{Binding Phone}" />
        <TextBox Watermark="Pays" Text="{Binding Country}" />
        <TextBox Watermark="Ville" Text="{Binding City}" />
        <TextBox Watermark="Rue" Text="{Binding Street}" />
        <TextBox Watermark="Code postal" Text="{Binding PostalCode}" />

        <Button Content="Enregistrer"
                Command="{Binding SaveCommand}"
                Margin="0 10 0 0"/>

        <Button Content="Annuler"
                Command="{Binding CancelCommand}" />
    </StackPanel>

</UserControl>